# Backend (FastAPI) environment

# Public URLs
FRONTEND_URL=https://selfstar.duckdns.org
BACKEND_URL=https://selfstar.duckdns.org

# Internal service URLs
AI_SERVICE_URL=http://ai:8600
# Some code paths may read this older key; keep both pointing to the same URL
AI_BASE_URL=http://ai:8600

# Security
SESSION_SECRET=please-change-to-a-long-random-string

# Database (choose one style)
# DATABASE_URL=mysql+aiomysql://user:pass@selfstar-db:3306/selfstar
# Or discrete vars consumed by your app:
# MYSQL_HOST=selfstar-db
# MYSQL_PORT=3306
# MYSQL_USER=selfstar
# MYSQL_PASSWORD=change_me
# MYSQL_DB=selfstar

# OAuth keys (if applicable)
# KAKAO_CLIENT_ID=
# KAKAO_CLIENT_SECRET=
# NAVER_CLIENT_ID=
# NAVER_CLIENT_SECRET=
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Naver Cloud Object Storage (S3-compatible)
# NCP_S3_ENDPOINT=https://kr.object.ncloudstorage.com
# NCP_S3_REGION=kr-standard
# NCP_S3_BUCKET=
# NCP_S3_ACCESS_KEY=
# NCP_S3_SECRET_KEY=
# NCP_S3_PREFIX=prod
# NCP_S3_SSE=AES256
# PRESIGN_DEFAULT_EXPIRES=3600

# Auto-reply scheduler (Business account comment replies)
# Enable/disable background loop
# AUTO_REPLY_SCHEDULER_ENABLED=1
# Interval between scans in seconds (e.g., 480 = 8 minutes)
# AUTO_REPLY_INTERVAL_SECONDS=480
# Limits per cycle (tune to control load)
# AUTO_REPLY_MEDIA_LIMIT=3
# AUTO_REPLY_COMMENTS_LIMIT=5
# AUTO_REPLY_MAX_PER_PERSONA=5
